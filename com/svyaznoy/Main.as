package com.svyaznoy {		import com.svyaznoy.modules.Voting;	import flash.display.Sprite;	import flash.events.Event;	import flash.display.StageAlign;	import flash.display.StageScaleMode;		/**	 * ...	 * @author Sergey Krivtsov (flashgangsta@gmail.com)	 */	public class Main extends Sprite {				private var voting:Voting;				public function Main() {			if( stage ) {				init();			} else {				addEventListener( Event.ADDED_TO_STAGE, init );			}		}				public function init( event:Event = null ):void {			if ( event ) removeEventListener( Event.ADDED_TO_STAGE, init );			stage.scaleMode = StageScaleMode.NO_SCALE;			stage.align = StageAlign.TOP_LEFT;									voting = voting_mc;						voting.type = Voting.TYPE_SINGLE;			voting.setAnswers( "a", "b" );					}				}	}