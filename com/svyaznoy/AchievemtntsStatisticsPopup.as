package com.svyaznoy {	import com.flashgangsta.managers.MappingManager;	import com.svyaznoy.gui.LabelWithIcon;	import flash.display.Sprite;		/**	 * ...	 * @author Sergey Krivtsov (flashgangsta@gmail.com)	 */	public class AchievemtntsStatisticsPopup extends Popup {		private var list:Array;				public function AchievemtntsStatisticsPopup( achievementsList:Array, lightnings:String, stars:String ) {			this.list = list;			var totalStarsLabel:LabelWithIcon = getChildByName( "totalStars_mc" ) as LabelWithIcon;			var totalLightnings:LabelWithIcon = getChildByName( "totalLightnings_mc" ) as LabelWithIcon;			var bonusesContainer:Sprite = getChildByName( "bonuses_mc" ) as Sprite;						totalLightnings.value = lightnings;			totalStarsLabel.value = stars;						totalLightnings.x = Math.floor( totalStarsLabel.x - totalLightnings.width - 5 );						for ( var i:int = 0; i < achievementsList.length; i++ ) {				var item:BonusesListItem = new BonusesListItem( achievementsList[ i ] );				item.y = Math.round( bonusesContainer.height );				bonusesContainer.addChild( item );			}						background.height = MappingManager.getBottom( bonusesContainer, this );		}			}}